    song_instance = get_object_or_404(Song)
    if request.method == 'POST':
        add_song_form = SongModelForm(request.POST)

        if add_song_form.is_valid():
            song_instance.save()

            return HttpResponseRedirect(reverse('recommended_songs'))
    else:
        add_song_form = SongModelForm()

        context = {
            'form': add_song_form,
            'song': song_instance

        }
